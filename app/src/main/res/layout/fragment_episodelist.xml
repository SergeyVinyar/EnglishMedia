<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.vinyarsky.englishmedia.EpisodeListFragment">

    <ImageView
        android:id="@+id/imageview_fragment_episodelist"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintRight_toLeftOf="@+id/guideline_fragment_episodelist_right"
        app:layout_constraintTop_toTopOf="@+id/textview_fragment_episodelist_title"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_fragment_episodelist_middle"
        app:layout_constraintHorizontal_bias="0.76" />

    <TextView
        android:id="@+id/textview_fragment_episodelist_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_fragment_episodelist_left"
        app:layout_constraintRight_toLeftOf="@+id/guideline_fragment_episodelist_middle"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_fragment_episodelist_level"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textview_fragment_episodelist_subscribed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subscribed"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_fragment_episodelist_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_fragment_episodelist_right"
        app:layout_constraintTop_toTopOf="@+id/textview_fragment_episodelist_level"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageView
        android:id="@+id/imageview_fragment_episodelist_flag"
        android:layout_width="36dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/flag_usa"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_fragment_episodelist_left"
        app:layout_constraintTop_toTopOf="@+id/textview_fragment_episodelist_level" />

    <TextView
        android:id="@+id/textview_fragment_episodelist_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="INTERMEDIATE"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imageview_fragment_episodelist_flag"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline_fragment_episodelist_middle"
        android:layout_marginRight="8dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_fragment_episodelist_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="368dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_fragment_episodelist_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="92dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="292dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_fragment_episodelist_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="16dp" />

    <ListView
        android:id="@+id/listview_fragment_episodelist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageview_fragment_episodelist" />
</android.support.constraint.ConstraintLayout>
