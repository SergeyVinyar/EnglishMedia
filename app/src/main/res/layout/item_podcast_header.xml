<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_background"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/imageview_item_podcast_header"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_item_podcast_header_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_item_podcast_header_right"
        app:layout_constraintTop_toTopOf="@+id/textview_item_podcast_header_title"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textview_item_podcast_header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_item_podcast_header_left"
        app:layout_constraintRight_toLeftOf="@+id/guideline_item_podcast_header_middle"
        app:layout_constraintTop_toBottomOf="@+id/textview_item_podcast_header_level" />

    <TextView
        android:id="@+id/textview_item_podcast_header_subscribed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subscribed"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_item_podcast_header_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_item_podcast_header_right"
        app:layout_constraintTop_toTopOf="@+id/textview_item_podcast_header_level"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageView
        android:id="@+id/imageview_item_podcast_header_flag"
        android:layout_width="36dp"
        android:layout_height="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_item_podcast_header_left"
        app:layout_constraintTop_toTopOf="@+id/textview_item_podcast_header_level"
        app:srcCompat="@drawable/flag_usa" />

    <TextView
        android:id="@+id/textview_item_podcast_header_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="INTERMEDIATE"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/imageview_item_podcast_header_flag"
        app:layout_constraintRight_toLeftOf="@+id/guideline_item_podcast_header_middle"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_item_podcast_header_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"
        tools:layout_editor_absoluteX="368dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_item_podcast_header_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="92dp"
        tools:layout_editor_absoluteX="292dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_item_podcast_header_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>
